                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh3_42"/>

            <TextView
                style="@style/AppInfoQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh3_51"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
