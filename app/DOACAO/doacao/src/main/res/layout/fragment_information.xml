            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh2_1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh2_2"/>

            <TextView
                style="@style/AppInfoSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh3"/>

            <TextView
                style="@style/AppInfoQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/donation_info_sh3_11"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
