<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mexico750.doacao.activities.MainActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp "
        android:src="@drawable/logotype"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/app_photo_background" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/app_black"
                        android:textSize="30dp"
                        android:text="@string/home_greeting"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/app_dark_green"
                        android:singleLine="true"
                        android:textSize="46dp"
                        android:text="Thiago"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_message_box"
                style="@style/AppBoxRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

               <TextView
                   android:id="@+id/home_message_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/app_white"
                   android:gravity="center"
                   android:textSize="18dp"
                   android:text="@string/home_1st"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
